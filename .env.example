# ============================================================================
# LRBF Environment Variables - Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git (it's in .gitignore)

# === IBKR Configuration ===
IBKR_ACCOUNT_ID=DU123456
IBKR_GATEWAY_URL=https://localhost:5000
IBKR_PAPER_TRADING=true

# Market Data Options:
# - "snapshot": Poll for latest price (1-second updates)
# - "streaming": WebSocket real-time ticks (sub-second)
# - "delayed": Free 15-minute delayed data
# - "realtime": Paid real-time data feed (requires IBKR subscription)
IBKR_MARKET_DATA_TYPE=snapshot
IBKR_POLLING_INTERVAL=1

# === Flask Configuration ===
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# === Database ===
DATABASE_PATH=data/trading.db

# === API Keys (Optional - for production) ===
# RAPIDAPI_KEY=your-rapidapi-key-here
# SENDGRID_API_KEY=your-sendgrid-key-here
# TWILIO_ACCOUNT_SID=your-twilio-sid-here
# TWILIO_AUTH_TOKEN=your-twilio-token-here

# === IBKR Gateway Configuration (ib_insync) ===
IB_GATEWAY_HOST=127.0.0.1
IB_GATEWAY_PAPER_PORT=4002
IB_GATEWAY_LIVE_PORT=4001
IB_USE_PAPER=true
IBKR_ACCOUNT_ID=5697343

